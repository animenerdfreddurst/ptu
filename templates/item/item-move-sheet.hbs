{{!-- Form Element --}}
<form class="move-sheet {{cssClass}}" autocomplete="off">
    {{!-- Sheet Header --}}
    <header class="header w-100 p-2">
        <h3 class="pl-1">MOVE</h3>
        <span class="lock-img pr-1">
            {{#if editLocked}}
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 43 51">
                    <image id="padlock" xlink:href="data:img/png;base64,"/>
                </svg>
            {{else}}
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 60 52">
                    <image id="padlock_copiar" data-name="padlock copiar" xlink:href="data:img/png;base64,"/>
                </svg>
            {{/if}}
        </span>
    </header>

    <div class="sheet-body pt-2 pb-2 h-100 w-100">
        <div class="move-row p-2">
            <div class="move-column">
                <div class="avatar ml-3 mr-4 mt-2 mb-2">
                    <img class="p-2 content {{#unless editLocked}}profile-img{{/unless}}" src="{{data.img}}" {{#unless editLocked}}data-edit="img"{{/unless}} title="{{name}}"/>
                </div>
                <div class="origin-box">
                    <input
                        name="system.origin"
                        type="text"
                        value="{{item.system.origin}}"
                        placeholder="Origin"
                        {{#if editLocked}}disabled{{/if}}
                    />
                </div>
            </div>

            <div class="move-info ml-3">
                <div class="move-name p-2">
                    <input
                        name="name"
                        type="text"
                        value="{{item.name}}"
                        placeholder="Name"
                        {{#if editLocked}}disabled{{/if}}
                    />
                </div>

                <div class="move-info-row">
                    {{!-- <div class="move-origin">
                        <input
                            name="system.origin"
                            type="text"
                            value="{{item.system.origin}}"
                            placeholder="Origin"
                            {{#if editLocked}}disabled{{/if}}
                        />
                    </div> --}}
                    <div class="move-info-col">
                        <div class="move-type-row pl-1">
                            <div class="move-type">
                                <select class="type-select" style="background: url('{{loadTypeImageUrl item.system.type}}');" {{#if editLocked}}disabled{{/if}}>
                                    {{{typeSelect item.system.type}}}
                                </select>
                            </div>
                            <div class="move-category">
                                <select class="type-select" style="background: url('{{loadTypeImageUrl item.system.category}}');" {{#if editLocked}}disabled{{/if}}>
                                    <option {{#if (is item.system.category 'Status')}}selected{{/if}} style="color: #191813;" value="Status">Status</option>
                                    <option {{#if (is item.system.category 'Physical')}}selected{{/if}} style="color: #191813;" value="Physical">Physical</option>
                                    <option {{#if (is item.system.category 'Special')}}selected{{/if}} style="color: #191813;" value="Special">Special</option>
                                </select>
                            </div>
                        </div>
                        <div class="move-other-info mt-2">
                            <span>
                                AC 
                                <input
                                    class="ml-2"
                                    name="system.ac"
                                    type="text"
                                    value="{{item.system.ac}}"
                                    placeholder=""
                                    {{#if editLocked}}disabled{{/if}}
                                />
                            </span>
                            <span>
                                FREQ 
                                <input
                                    class="ml-2"
                                    name="system.frequency"
                                    type="text"
                                    value="{{item.system.frequency}}"
                                    placeholder=""
                                    {{#if editLocked}}disabled{{/if}}
                                />
                            </span>
                            <span style="flex: 0 0 100%;">
                                RANGE 
                                <input
                                    class="ml-2"
                                    name="system.range"
                                    type="text"
                                    value="{{item.system.range}}"
                                    placeholder=""
                                    {{#if editLocked}}disabled{{/if}}
                                />
                            </span>
                            <span>
                                DB 
                                <input
                                    class="ml-2"
                                    name="system.damageBase"
                                    type="text"
                                    value="{{item.system.damageBase}}"
                                    placeholder=""
                                    {{#if editLocked}}disabled{{/if}}
                                />
                            </span>
                            <span>
                                {{#if (bigger item.system.damageBase 0)}}
                                <span>
                                    {{getDb (calcDb item.system)}}
                                </span>
                                +
                                <input
                                    name="system.damageBonus"
                                    type="number"
                                    value="{{item.system.damageBonus}}"
                                    placeholder=""
                                    {{#if editLocked}}disabled{{/if}}
                                />
                                {{else}}
                                    
                                {{/if}}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="move-row p-2 mt-1 mb-2" style="flex-grow: 1">
            <div class="move-effect">
                <textarea
                    name="system.effect"
                    {{#if editLocked}}disabled{{/if}}
                    >{{item.system.effect}}</textarea>
            </div>
        </div>
    </div>
</form>