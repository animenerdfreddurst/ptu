        <div class="swsh-box">
            <div class="swsh-header">
                <div class="d-flex w-100 mt-1 mb-1 justify-content-center">
                    <span style="padding:5px;text-align:center;word-break:break-word;">{{move}} Effect</span>
                </div>
            </div>
            <div class="swsh-body">
                {{#each effectData as |info|}}
                    <div class="d-flex flex-row" style="flex: 0 0 100%; align-items: center; {{#if @last}}{{else}}border-bottom: 1px solid lightgray;{{/if}}">
                        <span class="fs-9" style="flex: 1 0 70%; word-break:break-word;">{{info.message}}</span>
                        {{!-- Implement Effect Undo Button --}}
                        {{!-- <button class="undo-effect-button fs-10" data-target="{{id}}" data-origin-message="{{info.msgId}}" style="flex: 0 0 30%;">
                            undo
                        </button> --}}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/if}}